<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.TurbiTest">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvComicTitle"
        style="@style/Theme.TurbiTest.TitleText"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/comic_book_cover"
        tools:text="@string/appbar_scrolling_view_behavior" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivComicCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_12dp"
        app:layout_constraintTop_toBottomOf="@id/tvComicTitle"
        tools:layout_height="@dimen/dimen_120dp"
        tools:src="@drawable/comic_book_cover" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvComicPublicationDate"
        style="@style/Theme.TurbiTest.SimpleText"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivComicCover"
        tools:text="@string/app_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvComicAuthors"
        style="@style/Theme.TurbiTest.SimpleText"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvComicPublicationDate"
        tools:text="@string/app_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvComicPrice"
        style="@style/Theme.TurbiTest.SimpleText"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvComicAuthors"
        tools:text="@string/app_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvComicDescription"
        style="@style/Theme.TurbiTest.SimpleText"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvComicPrice"
        tools:text="@string/app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>